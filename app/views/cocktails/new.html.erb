<div class="container">
  <div class="padding-blank"></div>
  <h1>Create a new cocktail</h1>
  <div class="container">
    <div class="form">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name, placeholder: "Name", label: false, input_html: { class: 'form-input' } %>
        <%= f.input :photo, as: :file, label: false, input_html: { class: 'form-input photo-input' } %>
        <%= f.button :submit, class: "form-submit" %>
      <% end %>
    </div>
  </div>
</div>
